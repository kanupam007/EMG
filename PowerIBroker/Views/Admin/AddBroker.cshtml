@model PowerIBroker.Areas.Broker.Models.CompanyBroker
@{
    ViewBag.Title = "Add Broker";
    Layout = "~/Views/Shared/_emgadminlayout.cshtml";
}
<style>
    #tblsubbrokeruser_length, #tblBrokerMaster_length {
        display: none;
    }
</style>





<script src="~/Content/Frontend/js/jquery-ui.min.js"></script>
<link href="~/Content/Frontend/css/jquery-ui.css" rel="stylesheet" />
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript" src="@Url.Content("/Areas/Employee/Content/js/maskedinput.js")"></script>
<script src="~/AdminContent/customjs/admincustom.js"></script>
<link href="~/AdminContent/plugins/datatables/jquery.dataTables.css" rel="stylesheet" />
<script src="~/AdminContent/plugins/datatables/jquery.dataTables.min.js"></script>


<section class="content">
    <div class="col-lg-12" style="padding-right:0px;padding-left:0px">
    </div>
    <div class="row">
        <form id="frmAddBroker">
            <div class="col-md-12">
                <div class="box-body">
                    <fieldset>
                        @Html.HiddenFor(m => m.BrokerId)
                        @Html.ValidationSummary(true)

                        <legend>Broker Company</legend>
                        <div class="clearfix">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Broker Company Name <span style="color:red;">*</span></label>
                                    @Html.TextBoxFor(m => m.BrokerName, new { placeholder = "Broker Company Name", @class = "form-control" })

                                </div>
                            </div>
                        </div>

                        <div class="clearfix">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Street Name <span style="color:red;">*</span></label>

                                    @Html.TextBoxFor(m => m.Street, new { placeholder = "Street Name", @class = "form-control", @maxlength = 100 })

                                </div>
                            </div>
                        </div>
                        <div class="clearfix">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">City <span style="color:red;">*</span></label>

                                    @Html.TextBoxFor(m => m.City, new { placeholder = "City", @class = "form-control", @maxlength = 40 })

                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">State <span style="color:red;">*</span></label>
                                    @Html.TextBoxFor(m => m.State, new { placeholder = "State", @class = "form-control" })

                                </div>
                            </div>
                        </div>

                        <div class="clearfix">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Zip Code <span style="color:red;">*</span></label>
                                    @Html.TextBoxFor(m => m.ZipCode, new { placeholder = "Zip Code", @class = "form-control", @maxlength = 5 })

                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Country <span style="color:red;">*</span></label>

                                    @Html.TextBoxFor(m => m.Country, new { placeholder = "Country", @class = "form-control" })

                                </div>
                            </div>
                        </div>

                        <div class="clearfix">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Work Phone</label>
                                    @Html.TextBoxFor(m => m.WorkPhone, new { placeholder = "Work Phone", @class = "form-control phonemask" })
                                </div>
                            </div>

                        </div>
                    </fieldset>
                </div>
                <button type="button" class="btn btn-primary btnAddBroker" style="margin-left:27px;">Add</button>
                <div id="Contentplaceholder">
                    @Html.Action("_ManageBroker", "Admin")
                </div>
            </div>
        </form>
        <form id="frmAddBrokerUser">
            <div class="col-md-12">
                <div class="box-body">
                    <fieldset>
                        <legend>Broker User</legend>
                        <div id="addBroker">
                            @Html.Partial("_AddBroker", Model)
                        </div>
                    </fieldset>
                </div>
                <button type="button" name="submitButtonType" value="BrokerUser" class="btn btn-primary btnAddSubBroker" style="margin-left: 27px; margin-top: -10px;">Add</button>
                <br />
                <div class="clearfix" style="margin-top: 13px;"></div>
                <fieldset>
                    <legend>&nbsp;&nbsp;Broker User Details</legend>


                    <div id="dropdownbrokercompany">
                        @Html.Action("_DropdownBrokerComapny", "Admin")
                    </div>

                    <div id="subBrokerList">
                        @Html.Action("_SubbrokerList", "Admin")
                    </div>
                </fieldset>
            </div>
        </form>
    </div>
    <div id="LoadMain" style="display:none">
        <div id="load">
            <img src="~/Areas/Employee/Content/images/loading(1).gif" class="ajax-loader" />
        </div>
    </div>
</section>
<div class="modal fade" id="myModal" role="dialog"></div>




<script>
    function GetData() {        
        var value = $('#value').prop('checked');
        if (value == true) {
            value = "1";
        }
        else {
            value = "0";
        }
        $.ajax({
            type: 'GET',
            contentType: false,
            url: '@Url.Action("GetDeletedEMGProducts", "Admin")',
            data: { value: value },
            contentType: "application/json; charset=utf-8",
            success: function (data) {                
                $('#example1').html('');
                $('#example1').html(data);

            }
        });
    }
</script>
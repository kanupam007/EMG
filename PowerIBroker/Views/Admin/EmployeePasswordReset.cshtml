@{
    ViewBag.Title = "PasswordReset";
    Layout = "~/Views/Shared/_LayoutFrontend.cshtml";
}

<style>
    .topPadding {
        padding-top: 60px;
    }

        .topPadding form {
            padding: 25px 0;
        }
</style>
<style>
    .short {
        font-weight: bold;
        color: #FF0000;
        font-size: larger;
    }

    .weak {
        font-weight: bold;
        color: orange;
        font-size: larger;
    }

    .good {
        font-weight: bold;
        color: #2D98F3;
        font-size: larger;
    }

    .strong {
        font-weight: bold;
        color: limegreen;
        font-size: larger;
    }
</style>

<!--banner-->

<div class="clientsection" id="botm">


    <div class="topPadding">
        <h2>Welcome to Enroll My Group</h2>
        @using (Html.BeginForm("EmployeePasswordReset", "Admin", FormMethod.Post))
        {

            <div class="@(ViewData["Message"] != null ? ViewData["MessageType"] == "success" ? "successMsgDiv" : "errorMsgDiv" : "")">
                <span>@ViewData["Message"]</span>
            </div>
            if (ViewBag.UserID != null)
            {
                <input type="hidden" name="userID" value="@ViewBag.UserID" />
            <div class="loginCon">
                    <ul>
                        <li><input type="text" name="Email" value=@ViewBag.UserName class="inputTxt1-new" readonly /></li>
                        <li><input type="password" placeholder="New password" name="resetPassword" id="resetPassword" class="inputTxt1-new" /></li>
                        <li><input type="password" placeholder="Confirm Password" name="resetConfirmPassword" id="resetConfirmPassword" class="inputTxt1-new" />
                          
                        </li>
                       
                        <li style="text-align: -webkit-center">
                            <span id="result"></span>
                        <input type="submit" value="Create Password" class="btn signin create-pwd" id="btnResetPassword" style="text-align: -webkit-center" /></li>

                    </ul>

                </div>
               
            }
        }

    </div>
</div>






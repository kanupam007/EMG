@{
    ViewBag.Title = "Open Enrollment Report";
    Layout = "~/Views/Shared/_emgadminlayout.cshtml";
}

<!DOCTYPE html>


<title>GridData</title>
<style>
    .ngGridStyle {
        min-height: 600px;
        height: auto;
        width: 1000px;
        border: 0px solid black;
    }

    .highlighted {
        background: yellow;
    }

    #notification {
        position: fixed;
        top: 0px;
        width: 100%;
        z-index: 105;
        text-align: center;
        font-weight: normal;
        font-size: 14px;
        font-weight: bold;
        color: white;
        background-color: #FF7800;
        padding: 5px;
    }

        #notification span.dismiss {
            border: 2px solid #FFF;
            padding: 0 5px;
            cursor: pointer;
            float: right;
            margin-right: 10px;
        }

        #notification a {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

    .ui-dialog-title {
        display: none;
    }

    .ui-dialog-titlebar {
        background: transparent;
        border: none;
    }

    .ui-dialog .ui-dialog-titlebar-close {
        right: 0;
    }

    .ui-widget {
        font-weight: bold;
    }

    .ui-widget-content {
        border: 5px solid #aaaaaa;
        background: #ffffff url("images/ui-bg_flat_75_ffffff_40x100.png") 50% 50% repeat-x;
        color: #222222;
        min-height: 60px;
    }

    .ui-widget-content {
        min-height: 60px;
    }
    .ui-grid-viewport {
        min-height: 500px;
    }
</style>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular-touch.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular-animate.js"></script>
<script src="http://ui-grid.info/docs/grunt-scripts/csv.js"></script>
<script src="http://ui-grid.info/docs/grunt-scripts/pdfmake.js"></script>
<script src="http://ui-grid.info/docs/grunt-scripts/vfs_fonts.js"></script>
<script src="https://cdn.rawgit.com/angular-ui/ui-grid.info/gh-pages/release/3.0.0-rc.19/ui-grid.js"></script>
<link rel="stylesheet" href="https://cdn.rawgit.com/angular-ui/ui-grid.info/gh-pages/release/3.0.0-rc.19/ui-grid.css" type="text/css">
<link rel="stylesheet" href="main.css" type="text/css">
<script src="~/Client/Controller/GridDataController.js"></script>
<script src="~/Client/JSON/GridDataService.js"></script>
<style>
    .grid {
        width: 1000px;
        height: 400px;
    }
</style>

<div ng-app="gridData" style="margin-left:20px">
    <div ng-controller="MainCtrl">
        <div class="control-group">
            @*<input type="button" class="btn btn-small" ng-click="expandAllRows()" value="Expand All" />
            <input type="button" class="btn btn-small" ng-click="collapseAllRows()" value="Collapse All" />*@

            <div >
                <span>Company Name</span>
                <select class="form-control"
                        id="Select3"
                        ui-select2
                        data-required="true"
                        data-ng-model='CompanyID'
                        data-ng-change='CompanyChange(CompanyID)' style="width:300px">
                    <option value="0">Select Company</option>
                    <option data-ng-repeat="company in companyList" value="{{company.ID}}">{{company.CCompanyName}}</option>
                </select><br>
            </div>
        </div>
        <div ui-grid="gridOptions" ui-grid-pinning ui-grid-exporter ui-grid-pagination ui-grid-expandable class="grid"></div>
        @*<div ui-grid="gridOptions" ui-grid-pinning ui-grid-exporter  ui-grid-expandable class="grid"></div>*@
    </div>


</div>
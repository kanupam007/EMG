@model PowerIBrokerDataLayer.ContactUsPageContent
@{
    ViewBag.Title = "ManageContactUsContent";
    Layout = "~/Views/Shared/_emgadminlayout.cshtml";
}

<div id="page-wrapper">

    <div class="container-fluid">
        <div>

        </div>
        <div class="col-lg-12">
            <h2>Manage Contact Us</h2>

            <div class="@(TempData["CustomMessageMCUC"] != null ? TempData["MessageTypeMCUC"] == "Success" ? "alert alert-success" : "alert alert-danger" : "")">
                @if (TempData["CustomMessageMCUC"] != null)
                {
                    <i class="fa @(TempData["MessageTypeMCUC"] == "Success" ? "fa-check-circle" : "fa-times-circle")"></i>

                }
                <span>@TempData["CustomMessageMCUC"]</span>
            </div>

            @using (Html.BeginForm("ManageContactUsContent", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    <label>Banner Text</label>
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Title" })
                </div>

                <div class="form-group">
                    <label>Meta Title</label>
                    @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control", rows = "1", placeholder = "Meta Title" })

                </div>
                @*<div class="form-group">
                    <label>Meta Key Phrase</label>
                     @Html.TextBoxFor(model => model.MetaKeyPhrase, new { @class = "form-control", rows = "3", placeholder = "Meta Key Phrase" })
                    </div>*@
                <div class="form-group">
                    <label>Meta Keywords</label>
                    @Html.TextBoxFor(model => model.MetaKeywords, new { @class = "form-control", rows = "3", placeholder = "Meta Keywords" })

                </div>
                <div class="form-group">
                    <label>Meta Descriptions</label>
                    @Html.TextBoxFor(model => model.MetaDescriptions, new { @class = "form-control", rows = "3", placeholder = "Meta Descriptions" })
                </div>
                <div class="form-group">
                    <label>Meta Robots</label>
                    @Html.TextBoxFor(model => model.MetaKeyPhrase, new { @class = "form-control", rows = "3", placeholder = "Meta Robots" })
                </div>
                <div class="form-group">
                    <label>Banner Image (min:1500x406)</label>
                    <input type="file" id="file" name="file" accept="image/*" onchange="showfilepreview(this, 'contactUsBanner')">

                </div>
                <div class="form-group">
                    @if (Model.Id > 0 && !string.IsNullOrEmpty(Model.Banner))
                    {
                        <a href="javascript:void(0)" class="BannerImageContactUs" data-id="@Model.Id" style="float:right;">Delete Image</a>
                    }
                </div>
                <div class="form-group">
                    <img class="img-thumbnail" src="@(Model != null ? string.IsNullOrEmpty(Model.Banner) ? "http://placehold.it/1500x406" : Url.Content("~/Uploads/Admin/ContactUsBanners/" + Model.Banner) : "http://placehold.it/1500x406")" />
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Phone (Toll Free)</label>
                        @Html.TextBoxFor(model => model.TollFree, new { @class = "form-control", placeholder = "TollFree" })<br />
                        <label>Phone (Direct)</label>
                        @Html.TextBoxFor(model => model.Direct, new { @class = "form-control", placeholder = "Direct" })<br />
                        <label>Fax</label>
                        @Html.TextBoxFor(model => model.Fax, new { @class = "form-control", placeholder = "Fax" })<br />
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Sales Hours</label>
                        @Html.TextBoxFor(model => model.SalesHoursOpened, new { @class = "form-control", placeholder = "Opening (Time/Day)" })<br />
                        <label>Closed</label>
                        @Html.TextBoxFor(model => model.SalesHoursClosed, new { @class = "form-control", placeholder = "Closed on (days)" })<br />
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Address</label>
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Address" })

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Electronic Mail</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        @Html.HiddenFor(model => model.Banner)
                        <button class="btn btn-primary" id="btnSaveContactUsPageContent" type="submit">Submit</button>
                    </div>
                </div>
            }


        </div>


    </div>
</div>

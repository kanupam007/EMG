@model PowerIBrokerDataLayer.SystemConfigurationAdmin
@{
    ViewBag.Title = "Notification";
    Layout = "~/Views/Shared/_emgadminlayout.cshtml";
}

<link href="~/AdminContent/plugins/datatables/jquery.dataTables.css" rel="stylesheet" />
<script src="~/AdminContent/plugins/datatables/jquery.dataTables.min.js"></script>
<section class="content-header">
    <h1>
        Email/SMS Notification Admin
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active"> Email/SMS Notification Admin</li>
    </ol>
</section>
<section class="content">
    <!-- Info boxes -->
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Email/SMS Notification </h3>
                </div><!-- /.box-header -->
                <div class="col-lg-12">
                    <div class="@(TempData["CustomMessageNES"] != null ? TempData["MessageTypeNES"] == "Success" ? "alert alert-success" : "alert alert-danger" : "")">
                        @if (TempData["CustomMessageNES"] != null)
                        {
                            <i class="fa @(TempData["MessageTypeNES"] == "Success" ? "fa-check-circle" : "fa-times-circle")"></i>
                        }
                        <span>@TempData["CustomMessageNES"]</span>
                    </div>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("Notification", "Admin", FormMethod.Post))
                    {
                        @Html.HiddenFor(model => model.Id)
                        if (Model != null && Model.Id > 0)
                        {
                            <div class="box-body">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">@Model.PropertyName</label>
                                    </div>
                                    <div class="form-group">
                                        @Html.CheckBox("IsActive", Model.IsActive) <span style="padding: 0 0 0 9px;">Active</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3" style="margin-left:30px">
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        }
                    }
                    <section class="content">
                        <!-- Info boxes -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="box">
                                    <div class="box-header">
                                        <h3 class="box-title">Email/SMS Notification - List</h3>
                                    </div>
                                    <div class="box-body">
                                        @Html.Partial("_Notification")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

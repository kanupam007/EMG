<script>
    function GetData() {
        
        var value = $('#value').prop('checked');
        if (value == true) {
            value = "1";
        }
        else {
            value = "0";
        }
        $.ajax({
            type: 'GET',
            contentType: false,
            url: '@Url.Action("SubscriptionPlans", "Admin")',
            data: { value: value },

<table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th width="50%">EMG Product</th>
            <th width="20%">EMG Cost</th>
            <th width="10%">Status</th>
            <th width="20%">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.EMGProducts != null)
        {

            foreach (var options in ViewBag.EMGProducts)
            {
                <tr>
                    <td>@options.ProductName</td>
                    <td>@options.ProductCost</td>
                    <td>
                        @(options.IsActive == true ? "Active" : "Inactive")

                    </td>
                    <td>
                        @if (options.IsDeleted != true)
                        {
                            <a href="@Url.Action("EditEMGProducts", "Admin", new { @id = options.ID })" class="btn btn-primary btn-xs">Edit</a>
                            @*<a class="btn btn-danger btn-xs">De-Activate</a>
                                <a class="btn btn-success btn-xs">Activate</a>*@
                            <a data-exclude="true" href="javascript:void(0)" onclick="return DeleteEMGProduct(@options.ID);" class="btn btn-primary btn-xs" style="background-color:red;border-color:red"> Delete</a>
                        }
                    </td>
                </tr>
            }
        }



    </tbody>
</table>